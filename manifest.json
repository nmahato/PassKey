{
  "manifest_version": 3,
  "name": "PassKeeper",
  "version": "1.0",
  "description": "Secure password manager extension",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "PassKeeper",
    "default_icon": "icon.svg"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}